<% if @comment.errors.any? %>
  displayError('<%= j render "comments/form_errors", comment: @comment %>')
  refreshForm('<%= j render "comments/form", movie: @movie, comment: @comment %>');
<% else %>
  addComment('<%= j render "comments/show", comment: @comment %>');
  refreshForm('<%= j render "comments/form", movie: @movie, comment: Comment.new %>');
  hideError();
  hideFlash();
<% end %>
